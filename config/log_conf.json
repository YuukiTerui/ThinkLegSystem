{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {},

    "formatters": {
        "mainFormatter": {
            "format": "%(asctime)s %(filename)s:%(lineno)s %(funcName)s %(module)s [%(levelname)s]: %(message)s"
        },
        "print": {
            "format": "%(asctime)s[%(levelname)s]\t%(message)s"
        }
    },

    "handlers": {
        "logFileHandler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "mainFormatter",
            "filename": "./logs/__main__.log",
            "mode": "a",
            "encoding": "utf-8"
        },
        "printHandler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "print",
            "stream": "ext://sys.stdout"
        },
        "arduinoHandler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "mainFormatter",
            "filename": "./logs/arduino.log",
            "mode": "a",
            "encoding": "utf-8"
        },
        "guiHandler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "mainFormatter",
            "filename": "./logs/gui.log",
            "mode": "a",
            "encoding": "utf-8"
        }
    },

    "loggers": {
        "__main__": {
            "level": "DEBUG",
            "handlers": ["logFileHandler", "printHandler"],
            "propagate": false
        },
        "arduino": {
            "level": "DEBUG",
            "handlers": ["arduinoHandler", "printHandler"],
            "propagate": false
        },
        "gui": {
            "level": "DEBUG",
            "handler": ["guiHandler"],
            "propagate": false
        },
        "gui.app": {
            "level": "DEBUG",
            "handler": ["printHandler"],
            "propagate": true
        },
        "gui.frame": {
            "level": "DEBUG",
            "handler": ["printHandler"],
            "propagate": true
        }
    },

    "root": {
        "level": "DEBUG",
        "handler": ["logFileHandler"]
    }
}